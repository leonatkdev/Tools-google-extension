{
  "manifest_version": 3,
  "name": "Dev Tools (Alfa)",
  "short_name": "Dev Tools",
  "version": "0.1.1",
  "description": "A versatile tool for developers and designers, including a color picker, lorem ipsum generator, typography analyzer, and image resizer/converter.",
  "default_locale": "en",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "ColorPickerHtml.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "categories": ["Developer Tools", "Productivity"],
  "keywords": [
    "developer tools",
    "image resize",
    "color picker",
    "lorem ipsum",
    "typography",
    "edit",
    "photo"
  ]
}
